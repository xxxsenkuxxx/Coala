<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/group_dialog_linearlayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/group_add_dialog_bg" >
    <EditText
        android:id="@+id/editTextGroupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/group_name"
        android:singleLine="true"
        android:layout_marginTop="37dp"
        android:lines="1"
        android:textSize="14sp"
        android:paddingLeft="17dp"
        android:background="@drawable/group_dialog_edit" />
    <ImageButton
	    android:id="@+id/alarm_button"
		android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:src="@drawable/group_alarm_button_style"
	    android:background="#0000"/>
    <LinearLayout
        android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_marginTop="7dp"
	    android:gravity="center_vertical|center_horizontal"
	    android:orientation="horizontal">
		<ImageButton
		    android:id="@+id/save_group_button"
			android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:src="@drawable/dialog_add_button_style"
		    android:background="#0000"/>
		<ImageButton
		    android:id="@+id/cancel_save_group_button"
			android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="10dp"
		    android:src="@drawable/dialog_cancel_button_style"
		    android:background="#0000"/>
	</LinearLayout>	
</LinearLayout>