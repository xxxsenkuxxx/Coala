<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingTop="37dp"
    android:background="@drawable/group_delete_dialog_bg">
    <LinearLayout
        android:layout_width="220dp"
    	android:layout_height="190dp"
    	android:orientation="vertical"
    	android:background="#f1f5f2">
	    <ListView
	        android:id="@android:id/list"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:divider="#0000"/>
	    <TextView 
	        android:id="@android:id/empty"
	        android:layout_width="fill_parent" 
	        android:layout_height="wrap_content"
	        android:text="그룹이 없습니다."/>
    </LinearLayout>
    <LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_marginTop="7dp"
	    android:gravity="center_vertical|center_horizontal"> 
	    <ImageButton
	        android:id="@+id/delete_group_button"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/dialog_delete_button_style"
	        android:background="#0000"/>
	    <ImageButton
	        android:id="@+id/cancel_delete_group_button"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/dialog_cancel_button_style"
	        android:layout_marginLeft="10dp"
	        android:background="#0000"/>
	</LinearLayout>
</LinearLayout>