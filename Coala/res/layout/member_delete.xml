<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingTop="37dp"
    android:background="@drawable/member_delete_dialog_bg">
    <LinearLayout
        android:layout_width="220dp"
    	android:layout_height="190dp"
    	android:orientation="vertical"
    	android:background="#f1f5f2">
	    <CheckBox
	        android:id="@+id/checkBoxMemberCheckAll"
	        android:layout_width="fill_parent" 
	        android:layout_height="wrap_content"
	        android:textSize="14sp"
	        android:enabled="false"
	        android:button="@drawable/checkbox_style"
	        android:background="#f1f5f2"
	        android:textColor="#000000"
	        android:layout_marginLeft="5dp"
	        android:paddingTop="5dp"
	        android:paddingBottom="5dp"
	        android:paddingLeft="40dp"
	        android:text="전체선택"/>
	    <ListView
	        android:id="@android:id/list"
	        android:layout_below="@id/checkBoxMemberCheckAll"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:divider="#0000"/>
	    <TextView 
	        android:id="@android:id/empty"
	        android:layout_below="@id/checkBoxMemberCheckAll"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="#f1f5f2"
	        android:text="구성원이 없습니다."/>
	</LinearLayout>
    <LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="7dp"
	    android:orientation="horizontal"
	    android:gravity="center_vertical|center_horizontal">>
	    <ImageButton
	        android:id="@+id/buttonDeleteMember"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/dialog_delete_button_style"
	        android:background="#0000"/>
	    <ImageButton
	        android:id="@+id/buttonDeleteMemberCancel"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:src="@drawable/dialog_cancel_button_style"
	        android:background="#0000"/>
	</LinearLayout>
</LinearLayout>